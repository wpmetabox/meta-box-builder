{
	"name": "wpmetabox/meta-box-builder",
	"description": "MB Builder extension for Meta Box",
	"license": "GPL-2.0-or-later",
	"type": "wordpress-plugin",
	"config": {
		"prepend-autoloader": false
	},
	"autoload": {
		"psr-4": {
			"MBB\\": "src/"
		}
	},
	"require": {
		"wpmetabox/support": "dev-master",
		"wpmetabox/mbb-parser": "dev-master",
		"elightup/twig": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.3",
		"opis/json-schema": "^2.4"
	},
	"scripts": {
		"post-update-cmd": [
			"echo Deleting .git dirs...",
			"rm -rf vendor/**/**/.git"
		],
		"post-install-cmd": [
			"echo Deleting .git dirs...",
			"rm -rf vendor/**/**/.git"
		],
		"phpcs": [
			"phpcs --standard='../meta-box-aio/phpcs.xml'"
		],
		"phpcbf": [
			"phpcbf --standard='../meta-box-aio/phpcs.xml'"
		]
	},
	"extra": {
		"dev-files": {
			"/": [
				".git",
				".github/",
				".gitattributes",
				".gitignore",
				".distignore",
				"*.yaml",
				"*.yml",
				"*.txt",
				"*.less",
				"*.scss",
				"*.po",
				"composer.json",
				"composer.lock",
				"package.json",
				"package-lock.json",
				"phpcs.xml",
				"pnpm-lock.yaml",
				"phpstan.neon",
				"phpunit.xml",
				".babelrc",
				"webpack.config.js",
				".editoconfig",
				".vscode",
				"esbuild.js",
				"LICENSE",
				"*.md",
				"test/",
				"tests/",
				"demo.php",
				"demo/",
				"sass/",
				"vendor/"
			],
			"riimu/kit-phpencoder": [
				"examples/",
				"*.json"
			],
			"elightup/twig": [
				"*.json",
				"twig.php"
			]
		}
	}
}
